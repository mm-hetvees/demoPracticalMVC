@model demoPractical.Models.Registeration

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-2">
            @Html.Label("First Name:")
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.FirstName, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="row" style="margin-top:15px;">
        <div class="col-md-2">
            @Html.Label("Last Name:")
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.LastName, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="row" style="margin-top:15px;">
        <div class="col-md-2">
            @Html.Label("BirthDate:")
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.BirthDate, htmlAttributes: new { @class = "form-control", @type = "date" })
        </div>
    </div>
    <div class="row" style="margin-top:15px;">
        <div class="col-md-2">
            @Html.Label("Address:")
        </div>
        <div class="col-md-4">
            @Html.TextAreaFor(model => model.Address, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="row" style="margin-top:15px;">
        <div class="col-md-2">
            @Html.Label("Zip Code:")
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.Zipcode, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="row" style="margin-top:15px;">
        <div class="col-md-2">
            @Html.Label("Country:")
        </div>
        <div class="col-md-4">
            @Html.DropDownList("ddlCountry", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="row" style="margin-top:15px;">
        <div class="col-md-4">
            <input type="submit" value="Register" class="btn btn-primary" name="btnAction" />
            <input type="submit" value="Reset" class="btn btn-dark" id="btnReset" name="btnAction" />
        </div>
    </div>
    if (ViewBag.result != null)
    {
        <div class="table-bordered" style="margin-top:15px;padding:15px;">
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("First Name")
                </div>
                <div class="col-md-4">
                    @ViewBag.result.FirstName
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("Last Name")
                </div>
                <div class="col-md-4">
                    @ViewBag.result.LastName
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("BirthDate")
                </div>
                <div class="col-md-4">
                    @ViewBag.result.BirthDate.ToString("dd/MM/yyyy")
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("Address")
                </div>
                <div class="col-md-4">
                    @ViewBag.result.Address
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("ZipCode")
                </div>
                <div class="col-md-4">
                    @ViewBag.result.Zipcode
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("Country")
                </div>
                <div class="col-md-4">
                    @ViewBag.result.Country
                </div>
            </div>
        </div>

    }
}
