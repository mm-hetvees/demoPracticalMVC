@model demoPractical.Models.NumericOperation

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm()) { 
    <div class="row">
        <div class="col-2">
            @Html.Label("Enter Number:", htmlAttributes: new {@class="text-right"})
        </div>
        <div class="col-4">
            @Html.TextBoxFor(model => model.no, htmlAttributes: new {@class="form-control"})
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div>
                <input type="radio" name="radioChoice" value="Odd Or Even" />Odd Or Even
            </div>
            <div>
                <input type="radio" name="radioChoice" value="Positive Or Negative" />Positive Or Negative
            </div>
            <div>
                <input type="radio" name="radioChoice" value="Square" />Square
            </div>
            <div>
                <input type="radio" name="radioChoice" value="Factorial" />Factorial
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            @Html.DisplayFor(model=>model.result)
        </div>
    </div>
}

