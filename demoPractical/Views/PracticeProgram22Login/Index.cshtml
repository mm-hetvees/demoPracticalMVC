@model demoPractical.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <div class="table-bordered" style="width:500px;padding:10px;">
        <div class="row" style="margin-top:15px;">
            <div class="col-md-4">
                @Html.Label("Email:")
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.UserEmail, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserEmail, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="margin-top:15px;">
            <div class="col-md-4">
                @Html.Label("Password:")
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.UserPassword, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserPassword, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="margin-top:15px;">
            <div class="col-md-12 text-center">
                <input type="submit" value="Submit" class="btn btn-primary" name="btnAction" />
                <input type="submit" value="Reset" class="btn btn-secondary" name="btnAction"/>
            </div>
        </div>
        @if(ViewBag.Result != null) { 
            <div class="row">
                <div class="col text-center">
                    @if (ViewBag.Result == "Logged In Succesfully!!")
                    {
                        <label class="text-success">@ViewBag.Result</label>
                    }
                    else
                    {
                        <label class="text-danger">@ViewBag.Result</label>
                    }

                </div>
            </div>
        }
    </div>
}

