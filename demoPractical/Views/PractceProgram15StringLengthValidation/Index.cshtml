@model demoPractical.Models.LengthValidator

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <div class="table-bordered" style="width:500px;padding:10px;">
        <div class="row" style="margin-top:15px;">
            <div class="col-md-4">
                @Html.Label("Comment:")
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.comment, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.comment, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="margin-top:15px;">
            <div class="col-md-12 text-center">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
        @if (@ViewBag.comment != null)
        {
            <div class="row" style="margin-top:15px;">
                <div class="col-md-4">
                    @Html.Label("Comment:")
                </div>
                <div class="col-md-8">
                    @ViewBag.comment
                </div>
            </div>
        }
    </div>
}
