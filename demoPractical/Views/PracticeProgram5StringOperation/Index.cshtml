@model demoPractical.Models.StringOperation

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-2">
            @Html.Label("Enter String:", htmlAttributes: new { @class = "text-right" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(model => model.inputString, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div>
                <input type="radio" name="radioChoice" value="UpperCase" />UpperCase
            </div>
            <div>
                <input type="radio" name="radioChoice" value="LowerCase" />LowerCase
            </div>
            <div>
                <input type="radio" name="radioChoice" value="LeftCharacters" />Left 5 Characters
            </div>
            <div>
                <input type="radio" name="radioChoice" value="RightCharacters" />Right 5 Characters
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            @Html.DisplayFor(model => model.result)
        </div>
    </div>
}

